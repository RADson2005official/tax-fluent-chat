# Application Settings
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=${PROD_CORS_ORIGINS}

# Encryption Key
ENCRYPTION_KEY=${PROD_ENCRYPTION_KEY}

# Vector Database
CHROMA_PERSIST_DIR=/app/data/chroma_db

# Logging
LOG_LEVEL=WARNING
